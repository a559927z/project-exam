<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <classPathEntry location="D:\maven\repository\mysql\mysql-connector-java\5.1.30\mysql-connector-java-5.1.30.jar"/>


    <context id="mysql" targetRuntime="MyBatis3">
        <!-- 生成的Java文件的编码 -->
        <property name="javaFileEncoding" value="UTF-8"/>
        <!-- 格式化java代码 -->
        <property name="javaFormatter" value="org.mybatis.generator.api.dom.DefaultJavaFormatter"/>
        <!-- 格式化XML代码 -->
        <property name="xmlFormatter" value="org.mybatis.generator.api.dom.DefaultXmlFormatter"/>

        <!-- beginningDelimiter和endingDelimiter：指明数据库的用于标记数据库对象名的符号，比如ORACLE就是双引号，MYSQL默认是`反引号； -->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"></plugin>
        <plugin type="com.ks.plugin.PaginationPlugin"></plugin>

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3369/exam"
                        userId="root" password="root"/>

        <!-- Integer，Long，Short等来对应DECIMAL和 NUMERIC数据类型 -->
        <javaTypeResolver type="org.mybatis.generator.internal.types.JavaTypeResolverDefaultImpl">
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>


        <!-- DTO -->
        <javaModelGenerator targetPackage="com.ks.dto" targetProject="src/main/java">
            <property name="constructorBased" value="false"/>
            <property name="enableSubPackages" value="true"/>
            <property name="immutable" value="false"/>
            <property name="baseDto" value="net.chinahrd.dto.BaseDto"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!--XML-->
        <sqlMapGenerator targetPackage="com.ks.dao" targetProject="src/main/resources/mapper">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!--DAO-->
        <javaClientGenerator targetPackage="com.ks.dao" type="ANNOTATEDMAPPER" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="public_login" domainObjectName="PublicLogin">
            <property name="constructorBased" value="false"/>
            <property name="ignoreQualifiersAtRuntime" value="false"/>
            <property name="immutable" value="false"/>
            <property name="modelOnly" value="false"/>
            <property name="useActualColumnNames" value="false"/>
            <columnOverride column="customer_id">
                <property name="property" value="customerId"/>
            </columnOverride>

        </table>
        <!--<table tableName="exam_question_bank" domainObjectName="ExamQuestionBank"><property name="useActualColumnNames" value="false"/><property name="rootClass" value="com.ks.dto.BaseDto"/></table>-->
        <!--<table tableName="exam_roll" domainObjectName="ExamRoll"><property name="useActualColumnNames" value="false"/><property name="rootClass" value="com.ks.dto.BaseDto"/></table>-->
        <table tableName="exam_true_answer" domainObjectName="ExamTrueAnswer">
            <property name="useActualColumnNames" value="false"/>
            <property name="rootClass" value="com.ks.dto.BaseDto"/>
        </table>
    </context>
</generatorConfiguration>